<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <StackPanel>
        <Button x:Name ="TimerBt" Content="開始計時" HorizontalAlignment="Center" Margin="100,50,0,0" VerticalAlignment="Center" Click="TimerBt_Click"/>
            <TextBlock x:Name="TimerText" Width="60" Margin="100,15,0,-15" Text="0" TextAlignment="Center"/>
        <Button x:Name ="TimerBt1" Content="倒數計時" HorizontalAlignment="Center" Margin="0,-50,100,0" VerticalAlignment="Center" Click="TimerBt_Click"/>
            <TextBlock x:Name="TimerText1" Width="60" Margin="0,0,100,0" Text="0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
